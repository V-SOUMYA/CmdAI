{
  "name": "CmdAI â€” AI on Command",
  "description": "A universal AI command palette that understands any webpage with a single shortcut.",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["activeTab", "scripting"],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["popup.css"]
    }
  ],

  "commands": {
  "open-cmdai": {
    "suggested_key": {
      "default": "Ctrl+Shift+K",
      "mac": "Command+Shift+K"
    },
    "description": "Open CmdAI"
  }
}
}